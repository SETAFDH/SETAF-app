                        <title type="titre_ouvrage">Martin Luther, Deudsch Catechismus</title>
                        <author role="artiste">Lucas Cranach</author>
                        <publisher>Georg Rhau</publisher>
                        <pubPlace>Wittenberg</pubPlace>
                        <date>1529</date>
                        <idno type="VD16" corresp="https://gateway-bayern.de/VD16+L+4341">VD16 n° L 4341</idno>
