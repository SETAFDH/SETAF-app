                  </figure>
                </item>
                
                <item n="5">
                  <figure>
                    <graphic url="https://api.digitale-sammlungen.de/iiif/image/v2/bsb00086460_00008/full/full/0/default.jpg"/>
                    <figDesc>
                      <title type="titre_courant"/>
