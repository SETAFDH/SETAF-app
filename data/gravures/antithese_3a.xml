                        <author role="artiste">Petrarca Meister</author>
                        <publisher>[Sigmund Grimm und Marx Wirsung] </publisher>
                        <pubPlace>[Augsburg]</pubPlace>
                        <date>1520</date>
                        <idno type="VD16" corresp="https://gateway-bayern.de/VD16+D+1304">VD16 n° D 1304</idno>
                        <idno type="USTC" corresp="https://www.ustc.ac.uk/editions/635709">USTC n° 635709</idno>
